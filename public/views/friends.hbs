<div id="site-wrap">
    <header>
        <h1>Your Friends</h1>
    <form id="add-friend-form" method="POST" action="/add_friend">
        <input name="username" id="add-friend"  type="text" minlength="5" placeholder="Add Friend" />
        <input type="submit" name="submit_user" value="Add">
        <span class="fa fa-plus-circle" aria-hidden="true"></span></header>
    </form>
    <div>
        <ul class="friend-list">
        {{# if friends.length}}
        {{# each friends}}
